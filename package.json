{
  "name": "string-catalog-mcp",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for interacting with Xcode String Catalog (.xcstrings) files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "string-catalog-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "inspect": "pnpm dlx @modelcontextprotocol/inspector tsx src/index.ts",
    "mcp:add": "claude mcp add string-catalog-mcp -- pnpm --dir=$PWD dlx tsx $PWD/src/index.ts",
    "mcp:remove": "claude mcp remove string-catalog-mcp",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "xcode",
    "string-catalog",
    "xcstrings",
    "localization",
    "i18n"
  ],
  "author": "Khoa Pham",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khoa/string-catalog-mcp.git"
  },
  "homepage": "https://github.com/khoa/string-catalog-mcp",
  "bugs": {
    "url": "https://github.com/khoa/string-catalog-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "prettier": "^3.4.2",
    "tsx": "^4.19.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.0"
  }
}
